---
import Layout from "@/layouts/Layout.astro";
import AboutMe from "@/components/AboutMe.astro";
import Briefcase from "@/components/icons/Briefcase.astro";
import CodeIcon from "@/components/icons/Code.astro";
import Experience from "@/components/Experience.astro";
import ProfileCheck from "@/components/icons/ProfileCheck.astro";
import Projects from "@/components/Projects.astro";
import Certificates from "@/components/Certificados.astro";
import Stack from "@/components/Stack.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import Hero from "@/components/Hero.astro";
---

<Layout
  title="Porfolio de Felipe Bursa - Desarrollador y Programador Web con 4 años de experiencia"
  description="Contrata a Felipe Bursa para crear tu aplicación web o móvil. Desarrollador Web y Creador de Contenido. Especializado en crear aplicaciones únicas."
>
  <SectionContainer class="py-8 md:py-18">
    <Hero />
  </SectionContainer>

  <SectionContainer id="Experiencia" class="mt-16">
    <h2
      class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
    >
      <Briefcase class="size-7" />
      Experiencia Laboral
    </h2>
    <Projects />
  </SectionContainer>

  <SectionContainer id="proyectos" class="mt-16">
    <h2
      class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
    >
      <CodeIcon class="size-7" />
      Proyectos personales o académicos
    </h2>
    <Experience />
  </SectionContainer>

  <SectionContainer
    id="Certificados-Tecnologias"
    class="mt-16 flex flex-wrap md:flex-nowrap gap-8"
  >
    <div class="w-full md:w-1/2">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <Briefcase class="size-7" />
        Tecnologías
      </h2>
      <Stack />
    </div>

    <div class="w-full md:w-1/2">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <ProfileCheck class="size-7" />
        Certificados
      </h2>
      <Certificates />
    </div>
  </SectionContainer>

  <SectionContainer id="sobre-mi" class="mt-16">
    <h2
      class="flex items-center mb-6 text-3xl font-semibold gap-x-8 text-black/80 dark:text-white"
    >
      <ProfileCheck class="size-8" />
      Sobre mí
    </h2>
    <AboutMe />
  </SectionContainer>
</Layout>
