const STACK = [
    {
        title: "FrontEnd üíª",
        tags: [TAGS.FLUTTER, TAGS.NEXT, TAGS.TAILWIND, TAGS.CSHARP , TAGS.REACT],
    },
    {
        title: "BackEnd ‚öôÔ∏è",
        tags: [
            TAGS.FASTAPI,
            TAGS.PLSQL,
            TAGS.MYSQL,
            TAGS.AWS,
            TAGS.CSHARP,
            TAGS.FLASK,
            TAGS.FIREBASE,
            TAGS.MONGODB,
            TAGS.DYNAMODB,
            TAGS.CHROMADB,
        ],
    },
    {
        title: "Artificial Intelligence ü§ñ",
        tags: [TAGS.LLAMAINDEX, TAGS.OPENAI],
    },
    {
        title: "Productivity üìä",
        tags: [TAGS.GITHUB, TAGS.NOTION, TAGS.TFS, TAGS.G_SUITE],
    },
];

const TAG_COLORS = [
    "bg-blue-500",
    "bg-green-500",
    "bg-yellow-500",
    "bg-indigo-500",
    "bg-purple-500",
    "bg-pink-500",
    "bg-red-500",
    "bg-gray-500",
];
---

<div class="grid grid-flow-row-dense grid-cols-1 md:grid-cols-2 gap-6">
    {
        STACK.map(({ title, tags }) => (
            <article class="flex flex-col space-x-0 space-y-8 group">
                <div class="w-full">
                    <div class="border border-transparent hover:border-gray-300 rounded-lg bg-white dark:bg-gray-800 p-6 transition duration-300 ease-in-out">
                        <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
                            {title}
                        </h3>

                        <div class="flex flex-wrap mt-2">
                            <ul class="flex flex-wrap mb-2 gap-x-2 gap-y-2">
                                {tags.map((tag, index) => (
                                    <li>
                                        <span
                                            class={`flex gap-x-2 rounded-full text-xs ${
                                                TAG_COLORS[
                                                    index % TAG_COLORS.length
                                                ]
                                            } text-white py-1 px-2`}
                                        >
                                            <tag.icon class="size-4" />
                                            {tag.name}
                                        </span>
                                    </li>
                                ))}
                            </ul>
                        </div>
                    </div>
                </div>
            </article>
        ))
    }
</div>
