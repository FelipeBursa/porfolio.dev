---
import GitHub from "./icons/GitHub.astro";
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import Link from "./icons/Link.astro";
import FastApi from "./icons/Fast.astro";
import LinkButton from "./LinkButton.astro";
import Flutter from "./icons/Flutter.astro";
import Firebase from "./icons/Firebase.astro";
import MongoDb from "./icons/MongoDb.astro";
import Flask from "./icons/Flask.astro";
import MySQL from "./icons/MySQL.astro";
import CSharp from "./icons/Csharp.astro";
const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  CSHARP: {
    name: "C#",
    class: "bg-black text-white",
    icon: CSharp,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  LLAMAINDEX: {
    name: "LLama Index",
    class: "bg-[#003159] text-white",
    icon: GitHub,
  },
  FLUTTER: {
    name: "Flutter",
    class: "bg-[#003159] text-white",
    icon: Flutter,
  },
  FIREBASE: {
    name: "Firebase",
    class: "bg-[#003159] text-white",
    icon: Firebase,
  },
  FASTAPI: {
    name: "FastApi",
    class: "bg-[#003159] text-white",
    icon: FastApi,
  },
  MONGODB: {
    name: "MongoDB",
    class: "bg-[#003159] text-white",
    icon: MongoDb,
  },
  FLASK: {
    name: "Flask",
    class: "bg-[#003159] text-white",
    icon: Flask,
  },
  GITHUB: {
    name: "GitHub",
    class: "bg-[#003159] text-white",
    icon: GitHub,
  },
  MYSQL: {
    name: "MySQL",
    class: "bg-[#003159] text-white",
    icon: MySQL,
  },
};

const TAG_COLORS = [
  "bg-blue-500",
  "bg-green-500",
  "bg-yellow-500",
  "bg-indigo-500",
  "bg-purple-500",
  "bg-pink-500",
  "bg-red-500",
  "bg-gray-500",
];

const PROJECTS = [
  {
    title: "Fullstack Mobile Developer üì±",

    company: "JoinMe",
    date: "2023",

    description:
      "Social network to connect people with common interests, with the aim of doing activities together. The application was developed with Flutter and Firebase.",
    links: [
      {
        url: "https://www.linkedin.com/posts/felipe-bursa_joinme-proyectofinal-utnfrc-activity-7155756058169204736-EHYm?utm_source=share&utm_medium=member_desktop",
        text: "",
      },
    ],
    github: "https://github.com/FelipeBursa/FrontJoinMe",
    image: "public/logo_caja.png", // The image has been changed here
    tags: [TAGS.FLUTTER, TAGS.GITHUB, TAGS.FIREBASE, TAGS.MONGODB],
  },
  {
    title: "ChatBot trained with a text file (PDF) üí¨ ü§ñ",

    company: "Personal",
    date: "2023",

    description:
      "Simple chat with a bot trained with a text file, using Llama index technology to train the model and with the gpt chat api.",
    links: [{ url: "https://www.caja.cba.gov.ar/", text: "" }],
    github: "https://github.com/FelipeBursa/ChatPruebaBircle",
    image: "public/logo_caja.png", // The image has been changed here
    tags: [TAGS.NEXT, TAGS.LLAMAINDEX, TAGS.GITHUB],
  },
  {
    title: "Software Design Project - Strategy Pattern ‚öôÔ∏è",

    company: "University",
    date: "2021",

    description:
      "This is a university project in which we applied basic software design concepts, with a special focus on the Strategy design pattern.",
    github: "https://github.com/FelipeBursa/PPAIDSI_3Entrega",
    tags: [TAGS.CSHARP, TAGS.GITHUB],
  },
];
---

<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
  {
    PROJECTS.map(
      ({ image, title, description, tags, links, github, company, date }) => (
        <article class="flex flex-col space-x-0 space-y-8 group">
          <div class="w-full">
            <div class="border border-transparent hover:border-gray-300 rounded-lg bg-white dark:bg-gray-800 p-6 transition duration-300 ease-in-out">
              <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
                {title}
              </h3>
              <h4 class="text-xl font-semibold text-blue-600 dark:text-blue-300">
                {company}
              </h4>

              <time class="p-0 m-0 text-sm text-gray-600/80 dark:text-white/80">
                {date}
              </time>
              <div class="flex flex-wrap mt-2">
                <ul class="flex flex-wrap mb-2 gap-x-2 gap-y-2">
                  {tags.map((tag, index) => (
                    <li>
                      <span
                        class={`flex gap-x-2 rounded-full text-xs ${
                          TAG_COLORS[index % TAG_COLORS.length]
                        } text-white py-1 px-2`}
                      >
                        <tag.icon class="size-4" />
                        {tag.name}
                      </span>
                    </li>
                  ))}
                </ul>
                <div class="mt-2 text-gray-700 dark:text-gray-400">
                  {description}
                </div>
                <footer class="flex items-end justify-start mt-4 gap-x-4">
                  {github && (
                    <LinkButton href={github}>
                      <GitHub class="size-6" />
                      Code
                    </LinkButton>
                  )}
                  {links &&
                    links.map((link) => (
                      <LinkButton href={link.url}>
                        <Link class="size-4" />
                        {link.text}
                      </LinkButton>
                    ))}
                </footer>
              </div>
            </div>
          </div>
        </article>
      ),
    )
  }
</div>
